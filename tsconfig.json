{
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "pretty": true,
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "bower_components"],
  "compileOnSave": true
}
