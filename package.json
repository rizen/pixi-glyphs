{
  "name": "pixi-glyphs",
  "version": "4.0.1",
  "description": "Glyphs - Advanced text rendering for pixi.js",
  "author": "Mims Wright, JT Smith, tleunen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/rizen/pixi-glyphs.git"
  },
  "bugs": {
    "url": "https://github.com/rizen/pixi-glyphs/issues"
  },
  "homepage": "https://github.com/rizne/pixi-glyphs",
  "source": "./src/index.ts",
  "main": "./dist/pixi-glyphs.js",
  "umd:main": "./dist/pixi-glyphs.umd.js",
  "module": "./dist/pixi-glyphs.m.js",
  "exports": "./dist/pixi-glyphs.modern.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "pixi",
    "pixi.js",
    "text",
    "multistyle",
    "pixi-tagged-text",
    "rich text",
    "html text",
    "multi style",
    "style",
    "canvas",
    "webgl",
    "graphics",
    "render",
    "2d"
  ],
  "peerDependencies": {
    "pixi.js": "^8.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "dependencies": {
    "emoji-regex": "9.2.2"
  },
  "devDependencies": {
    "@jest-runner/electron": "^3.0.1",
    "@napi-rs/canvas": "^0.1.44",
    "@types/emoji-regex": "^9.2.0",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "ansi-regex": "^6.0.1",
    "commitizen": "^4.2.4",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "electron": "^28.1.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "http-server": "^14.0.0",
    "install-peers-cli": "^2.2.0",
    "jest": "^26",
    "jest-canvas-mock": "^2.3.1",
    "jsdom": "^24.0.0",
    "microbundle": "^0.15.0",
    "nth-check": "^2.0.1",
    "opener": "^1.5.1",
    "pixi.js": "^8.13.2",
    "prettier": "^3.2.2",
    "set-value": "^4.0.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^26",
    "typescript": "^4",
    "vite": "^7.1.5"
  },
  "scripts": {
    "prepare": "install-peers",
    "dev": "microbundle watch -f umd --name Glyphs --external 'pixi.js' --globals 'pixi.js'=PIXI",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "concurrently \"npm run dev\" \"vite\"",
    "docs:build": "npm run build && vite build",
    "docs:preview": "vite preview",
    "build": "microbundle --name Glyphs --external 'pixi.js' --globals 'pixi.js'=PIXI --no-compress",
    "lint:eslint": "eslint ./src/**/*.ts",
    "lint:prettier": "prettier ./**/*.{ts,js,json,html,css,md} -l",
    "fix:prettier": "prettier ./**/*.{ts,js,json,html,css,md} -w",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "prepublishOnly": "npm run build",
    "release": "standard-version"
  }
}
